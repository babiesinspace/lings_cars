<% if @admin %>
	<div class="container">
		<h2 class="center-align"><%= @admin.opener %></h2>
		<h4><%= @admin.info %></h4>
		<h5><%= @admin.closer %></h5>
	</div>
<% else %>

<div class="container">
	<h2 class="center-align"><%= @default.opener %></h2>
	<h4><%= @default.info %></h4>
	<h5><%= @default.closer %></h5>
</div>

<% end %>

<div class="container">
	<div class="row">
	<% @cars.each do |car| %>

	    <div class="col xs12 s4">
	      <div class="card large">
	        <div class="card-image">
	          <img src="<%= car.image %>">
	        </div>
	        <div class="card-content">
	          <span class="card-title"><a href="/cars/<%= car.id %>"><%= car.model %></a></span>
	          <p><%= car.description %></p>
	        </div>
	        <div class="card-action">
	          <p>$ <%= car.price %> / month <a href="/cars/<%= car.id %>">   More Info</a></p>
	        </div>
	      </div>
	    </div>

	<% end %>

	</div>
</div>

  <div class="container">
    <div class="row">
      <form class="col s12">
        <h4>Join Mailing List:</h4>
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate">
            <label for="email">Email</label>
            <span class="helper-text" data-error="wrong" data-success="right">Enter Your Email</span>
          </div>
        </div>
      </form>
    </div>
  </div>
